# CONFIGURAÇÕES PARA DADOS REAIS - ProspectRadar
# Copie este arquivo para .env.local e ajuste conforme necessário

# === CONFIGURAÇÃO PRINCIPAL ===
# Ativar dados reais da LDB (true) ou usar dados mock (false)
REACT_APP_USE_REAL_DATA=false

# === CONFIGURAÇÕES DE COLETA ===
# Intervalo de atualização automática (em millisegundos)
# 1800000 = 30 minutos, 900000 = 15 minutos
REACT_APP_DATA_REFRESH_INTERVAL=1800000

# Habilitar fallback para dados mock em caso de erro
REACT_APP_FALLBACK_TO_MOCK=true

# Modo híbrido (mistura dados reais com mock)
REACT_APP_HYBRID_MODE=false

# === DEBUG E DESENVOLVIMENTO ===
# Mostrar componente de debug na tela
REACT_APP_ENABLE_DATA_DEBUG=false

# Logs detalhados no console
REACT_APP_VERBOSE_LOGGING=false

# Simular demora na rede (apenas desenvolvimento)
REACT_APP_SIMULATE_NETWORK_DELAY=0

# === CONFIGURAÇÕES AVANÇADAS ===
# Timeout para requests HTTP (em millisegundos)
REACT_APP_HTTP_TIMEOUT=10000

# Delay entre requests para rate limiting (em millisegundos)
REACT_APP_RATE_LIMIT_DELAY=2000

# Máximo de tentativas em caso de erro
REACT_APP_MAX_RETRIES=3

# Tamanho máximo do cache (número de items)
REACT_APP_CACHE_SIZE=1000

# === URLS CUSTOMIZADAS ===
# URL base da LNB (apenas altere se necessário)
REACT_APP_LNB_BASE_URL=https://lnb.com.br

# URL base da CBB (apenas altere se necessário)
REACT_APP_CBB_BASE_URL=https://cbb.com.br

# === ANALYTICS E MONITORAMENTO ===
# Habilitar coleta de métricas
REACT_APP_ENABLE_ANALYTICS=false

# ID do Google Analytics (se aplicável)
REACT_APP_GA_TRACKING_ID=

# === CONFIGURAÇÕES DE PRODUÇÃO ===
# Estas configurações são para ambiente de produção
# REACT_APP_USE_REAL_DATA=true
# REACT_APP_ENABLE_DATA_DEBUG=false
# REACT_APP_VERBOSE_LOGGING=false
# REACT_APP_ENABLE_ANALYTICS=true

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
# Para desenvolvimento ativo com dados reais:
# REACT_APP_USE_REAL_DATA=true
# REACT_APP_ENABLE_DATA_DEBUG=true
# REACT_APP_VERBOSE_LOGGING=true
# REACT_APP_DATA_REFRESH_INTERVAL=900000

# === CONFIGURAÇÕES DE TESTE ===
# Para testar funcionalidades sem sobrecarregar servidores:
# REACT_APP_USE_REAL_DATA=false
# REACT_APP_HYBRID_MODE=true
# REACT_APP_SIMULATE_NETWORK_DELAY=1000
